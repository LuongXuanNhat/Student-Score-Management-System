@model IEnumerable<Project_62130516.Models.SinhVien>

@{
    ViewBag.Title = "Quản lý sinh viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Quản lý sinh viên</h2>

<p>
    @Html.ActionLink("Thêm sinh viên", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên sinh viên
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Email
        </th>
        <th>
            Giới tính
        </th>
        <th>
            Tên lớp
        </th>
        <th>
            Số học phần đã học
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenSV)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SDT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GioiTinh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lop.TenLop)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BangDiems.Count)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id = item.MaSV }) |
            @Html.ActionLink("Chi tiết", "Details", new { id = item.MaSV }) |
            @Html.ActionLink("Xóa", "Delete", new { id = item.MaSV })
        </td>
    </tr>
}

</table>
