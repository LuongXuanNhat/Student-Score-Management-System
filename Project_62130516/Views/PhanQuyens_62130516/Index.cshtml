@model IEnumerable<Project_62130516.Models.PhanQuyen>

@{
    ViewBag.Title = "Quản lý quyền";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách quyền</h2>

<p>
    @Html.ActionLink("Thêm quyền", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên quyền
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenQuyen)
        </td>
        <td>
            <button class="btn btn-warning">
                <a class="text-white text-decoration-none" href="@Url.Action("Edit", new { id = item.Id })">Sửa</a>
            </button>
            |
            <button class="btn btn-info">
                <a class="text-white text-decoration-none" href="@Url.Action("Details", new { id = item.Id })">Chi tiết</a>
            </button>
            |
            <button class="btn btn-danger">
                <a class="text-white text-decoration-none" href="@Url.Action("Delete", new { id = item.Id })">Xóa</a>
            </button>
        </td>
    </tr>
}

</table>
